<?xml version="1.0" ?>

<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">weather_log_listing.weather_log_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>weather_log_listing_columns</spinner>
        <deps>
            <dep>weather_log_listing.weather_log_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="weather_log_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Monogo_Weather::weather_log_listing</aclResource>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="weather_log_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="weather_log_listing_columns">
        <settings>
            <childDefaults>
                <param name="fieldAction" xsi:type="array">
                    <item name="provider" xsi:type="string">weather_log_listing.weather_log_listing.weather_log_listing_columns_editor</item>
                    <item name="target" xsi:type="string">startEdit</item>
                    <item name="params" xsi:type="array">
                        <item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
                        <item name="1" xsi:type="boolean">true</item>
                    </item>
                </param>
            </childDefaults>
        </settings>
        <selectionsColumn name="ids" sortOrder="10">
            <settings>
                <indexField>id</indexField>
            </settings>
        </selectionsColumn>
        <column name="description" sortOrder="20">
            <settings>
                <filter>text</filter>
                <label translate="true">Description</label>
                <editor>
                    <editorType>text</editorType>
                </editor>
            </settings>
        </column>
        <column name="city" sortOrder="30">
            <settings>
                <filter>text</filter>
                <label translate="true">City</label>
                <editor>
                    <editorType>text</editorType>
                </editor>
            </settings>
        </column>
        <column name="country" component="Magento_Ui/js/grid/columns/select" sortOrder="40">
            <settings>
                <options class="Magento\Directory\Model\Config\Source\Country"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <label translate="true">Country</label>
            </settings>
        </column>
        <column name="temp" sortOrder="50">
            <settings>
                <filter>text</filter>
                <label translate="true">Temperature</label>
                <editor>
                    <editorType>text</editorType>
                </editor>
            </settings>
        </column>
        <column name="temp_min" sortOrder="60">
            <settings>
                <filter>text</filter>
                <label translate="true">Minimal Temperature</label>
                <editor>
                    <editorType>text</editorType>
                </editor>
            </settings>
        </column>
        <column name="temp_max" sortOrder="70">
            <settings>
                <filter>text</filter>
                <label translate="true">Maximum Temperature</label>
                <editor>
                    <editorType>text</editorType>
                </editor>
            </settings>
        </column>
        <column name="wind_speed" sortOrder="80">
            <settings>
                <filter>text</filter>
                <label translate="true">Wind Speed</label>
                <editor>
                    <editorType>text</editorType>
                </editor>
            </settings>
        </column>
        <column name="wind_deg" sortOrder="90">
            <settings>
                <filter>text</filter>
                <label translate="true">Wind Direction</label>
                <editor>
                    <editorType>text</editorType>
                </editor>
            </settings>
        </column>
        <column name="pressure" sortOrder="100">
            <settings>
                <filter>text</filter>
                <label translate="true">Pressure</label>
                <editor>
                    <editorType>text</editorType>
                </editor>
            </settings>
        </column>
        <column name="unit_type" component="Magento_Ui/js/grid/columns/select" sortOrder="110">
            <settings>
                <options class="Monogo\Weather\Model\Config\Source\Units"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <label translate="true">Unit</label>
            </settings>
        </column>
        <column name="humidity" sortOrder="120">
            <settings>
                <filter>text</filter>
                <label translate="true">Humidity</label>
                <editor>
                    <editorType>text</editorType>
                </editor>
            </settings>
        </column>
        <column name="created_at" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date" sortOrder="130">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Created Date</label>
                <sorting>desc</sorting>
            </settings>
        </column>
    </columns>
</listing>
